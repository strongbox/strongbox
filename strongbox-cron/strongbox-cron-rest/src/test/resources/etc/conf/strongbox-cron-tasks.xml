        <properties>
            <cronExpression>0 0 5 * * ?</cronExpression> mandatory
            <jobClass>org.carlspring.strongbox.cron.jobs.DownloadRemoteMavenIndexCronJob</jobClass>
            <storageId>storage-common-proxies</storageId>
            <repositoryId>carlspring</repositoryId>
        </properties>
    </cron-task-configuration>

